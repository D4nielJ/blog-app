<div class="flex flex-col sm:px-12 bg-gradient-to-br from-indigo-800 to-indigo-900 rounded-lg shadow-lg">
  <div class="flex flex-col sm:flex-row py-6">
    <div class="flex-none w-full h-48 sm:w-48 relative">
      <%= image_tag @user.photo_link,
            alt: 'user',
            class: 'absolute inset-0 w-full h-full object-cover rounded-lg' %>
    </div>
    <div class="w-full flex flex-col items-end py-12 h-48">
      <h2 class="font-bold text-3xl">
        <%= @user.name %>
      </h2>
      <span class="font-light mb-8">@userName</span>
      <p class="text-gray-400">Number of posts: <span class="font-bold text-red-400">
          <%= @user.posts_counter %>
        </span>
      </p>
    </div>
  </div>
  <div class="py-6">
    <h3 class="font-bold text-xl text-red-400 mb-4">About...</h3>
    <p class="text-lg text-gray-200">
      <%= @user.bio %>
    </p>
  </div>
  <div class="flex flex-col py-6 gap-y-12 mb-4">
    <% @posts.each do |post| %>
      <%= render 'post_card', post: post %>
    <% end %>
  </div>
  <a href="/users/<%= @user.id %>/posts" class="bg-indigo-700 mx-auto w-max px-16 py-3 mb-6">See all posts</a>
</div>

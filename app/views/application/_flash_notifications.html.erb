<div class="fixed sm:max-w-sm inset-x-0 sm:right-10 sm:left-auto bottom-6 mx-8">
  <div class="flex flex-col items-center sm:items-end">
    <% flash.each do |type, msg| %>
      <% if type == 'notice' %>
        <%= render 'flash_card', type: type, msg: msg %>
      <% end %>
      <% if type == 'error' %>
        <%= render 'flash_card', type: type, msg: msg %>
      <% end %>
    <% end %>
  </div>
</div>

<% input_styles = "border-0 bg-gray-900 placeholder-indigo-200 border border-indigo-200 w-72" %>
<% pass_placeholder = "Password" %>
<% pass_placeholder = "Password (#{@minimum_password_length} characters minimun)" if @minimum_password_length %>

<h2 class="border-0 text-center max-w-sm mx-auto font-bold text-2xl text-indigo-500">Sign Up.</h2>
<p class="border-0 text-center max-w-sm mx-auto text-xl mb-4 text-indigo-200 opacity-80">Quick and easy!</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
  :html => { :class => "flex flex-col items-center gap-y-4"}) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name,
    class: "sr-only" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name",
    class: input_styles,
    placeholder: "Full name" %>
  </div>

  <div class="field">
    <%= f.label :photo,
    class: "sr-only" %>
    <%= f.text_field :photo, autofocus: true,
    class: input_styles,
    placeholder: "Picture link (Optional)" %>
  </div>

  <div class="field">
    <%= f.label :bio,
    class: "sr-only" %>
    <%= f.text_area :bio, autofocus: true,
    class: input_styles,
    placeholder: "Bio (Optional)" %>
  </div>

  <div class="field">
    <%= f.label :email,
    class: "sr-only" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
    class: input_styles,
    placeholder: "E-mail" %>
  </div>

  <div class="field">
    <%= f.label :password,
    class: "sr-only" %>
    <%= f.password_field :password, autocomplete: "new-password",
    class: input_styles,
    placeholder: pass_placeholder %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,
    class: "sr-only" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",
    class: input_styles,
    placeholder: "Password confirmation" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "bg-indigo-700 w-max px-16 py-3 mb-6 mt-6 cursor-pointer" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

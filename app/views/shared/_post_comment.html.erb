<div class="flex mb-6">
  <div class="flex-none w-14 h-14 relative mr-6">
    <%= image_tag 'portrait-medium.jpg',
            alt: 'user',
            class: 'absolute inset-0 w-full h-full object-cover rounded-full' %>
  </div>
  <div class="bg-gray-900 px-6 py-2 rounded-lg">
    <h5 class="font-bold text-gray-400 text-sm mb-1">
      <%= comment.author.name %>
    </h5>
    <p class="text-gray-400 text-sm ">
      <%= comment.text %>
    </p>
  </div>
</div>
